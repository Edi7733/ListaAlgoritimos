programa {//5. Verificação de número par: Verifique se um número fornecido é par ou ímpar.
  funcao inicio() {
    inteiro nu
    escreva("Digite o número: ")
    leia(nu)
    se(nu % 2 == 0){//Estrutura para descobrir se os valores recebidos são par ou ímpar usando a estrutura "se"
      escreva("O número ", nu , " fornecido é par!")
    }senao{
        escreva("\n O número ", nu, " fornecido é impar!\n ")
      }

  }
    
}
