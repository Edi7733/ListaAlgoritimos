programa {//6. Cálculo da Área de um Círculo: Leia o raio de um círculo e calcule sua área

  funcao inicio() {
    real n, x //Declaração das variáveis "n", "x"do tipo real
    escreva(" Digite um número: ")//Solicita ao úsuario o número
    leia(n)//O comando vai ler o primeiro número
    x = (3.14* n*n)//"x" vai receber o resultado da operação
     escreva("\nO raio do círclo é: ", x)//"X" vai apresentar o resultado ao úsuario
    
    
  }
}
