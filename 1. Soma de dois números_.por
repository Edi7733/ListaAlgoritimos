programa {//1. Soma de dois números: Leia dois números inteiros e exiba a soma entre eles.
  funcao inicio() {
    real num1, num2, soma // Declaração das variaveis

    escreva("Digite o primeiro número: ")
    leia(num1)
    escreva("Digite o segundo número: ")
    leia(num2)
    soma = num1 + num2 //Estrutura para somar os valores recebidos

    escreva("A soma dos dois números é: ", soma, "\n")
    
  }
}
